<project name="nuxeo-assembly" default="build" xmlns:nx="urn:nuxeo-build"
  xmlns:artifact="urn:nuxeo-artifact">
	<taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
	<taskdef resource="org/nuxeo/build/artifact/antlib.xml"
	           uri="urn:nuxeo-artifact" />
	<taskdef resource="net/sf/antcontrib/antlib.xml" />

  <target name="build" description="Build Nuxeo jBPM Marketplace package">
    <tstamp />
    <delete failonerror="false"
      dir="${maven.project.build.directory}/marketplace" />
    <mkdir dir="${maven.project.build.directory}/marketplace" />
    <copy todir="${maven.project.build.directory}/marketplace">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${nuxeo.marketplace.jbpm.version}" />
        <filter token="DISTRIB_VERSION" value="${nuxeo.distribution.version}" />
        <filter token="TARGET_VERSION" value="${nuxeo.target.jbpm.version}" />
      </filterset>
    </copy>
  	
  	<copy todir="${maven.project.build.directory}">
      <artifact:resolveFile
        key="org.nuxeo.ecm.distribution:nuxeo-distribution-cap::zip" />
      <artifact:resolveFile
        key="org.nuxeo.marketplace.jbpm:ear::zip" />
    </copy>
    <nx:zipdiff
      file1="${maven.project.build.directory}/ear-${nuxeo.marketplace.jbpm.version}.zip"
      file2="${maven.project.build.directory}/nuxeo-distribution-cap-${nuxeo.distribution.version}.zip"
      includesfile="${maven.project.build.directory}/includes"
      excludesfile="${maven.project.build.directory}/excludesfile"
      patternsetid="diff.versus.cap">
    </nx:zipdiff>
   
    <!-- NXP-12166: filter out conflicting JARs -->
  	<var name="install.excludes" value="" />
  	<loadfile property="jars" srcfile="${maven.project.build.directory}/excludesfile" />
    <for param="line" list="${jars}" delimiter="${line.separator}">
      <sequential>
        <if>
          <matches pattern=".*\.jar" string="@{line}" />
          <then>
            <echo>Excluding @{line}</echo>
            <var name="install.excludes"
                 value="${install.excludes}  &lt;delete file=&quot;${env.home}/@{line}&quot; /&gt;${line.separator}" />
          </then>
        </if>
      </sequential>
    </for>
  	
  	<unzip
      src="${maven.project.build.directory}/ear-${nuxeo.marketplace.jbpm.version}.zip"
      dest="${maven.project.build.directory}/marketplace/install">
      <patternset refid="diff.versus.cap" />
    </unzip>

    <copy file="src/main/resources/install.xml"
          todir="${maven.project.build.directory}/marketplace"
          overwrite="true">
      <filterset>
        <filter token="EXCLUDES" value="${install.excludes}" />
      </filterset>
    </copy>
  	
    <zip
      destfile="${maven.project.build.directory}/${maven.project.artifactId}-${nuxeo.marketplace.jbpm.version}.zip"
      basedir="${maven.project.build.directory}/marketplace" />
    <artifact:attach
      file="${maven.project.build.directory}/${maven.project.artifactId}-${nuxeo.marketplace.jbpm.version}.zip"
      target="${maven.project.groupId}:${maven.project.artifactId}"
      type="zip" />
  </target>

</project>
